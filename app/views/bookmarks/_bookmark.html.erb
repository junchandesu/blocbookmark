
<%= content_tag_for :div, bookmark, class: 'col-xs-4' do %>
	<%= bookmark.url %>

	<h4><%= link_to bookmark.url, bookmark.url, class: 'embedly-card' %></h4>
	<% if policy(bookmark).edit? %>
		<%= link_to "Edit bookmark", edit_topic_bookmark_path(bookmark.topic, bookmark), class: 'label label-default' %>
     <% end %>
     <% if policy(bookmark).destroy? %>
		<%= link_to "Delete bookmark", topic_bookmark_path(bookmark.topic, bookmark), method: :delete,class: 'label label-danger', data: {confirm: 'Are you sure you want to delete this?'} %>
	<% end %>
	
<%= render partial: 'likes/like', locals: { bookmark: bookmark, topic: bookmark.topic } %>
	<%= link_to "Delete", topic_bookmark_path(bookmark.topic, bookmark), method: :delete, class: 'btn btn-danger' %>
<% end %>
