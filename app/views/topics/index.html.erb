<div class="row">
	<h1> List of Topics </h1>

	<% @topics.each do |topic| %>
		<p><%= link_to topic.title, topic %>
		<%= link_to "Edit this topic", edit_topic_path(topic), class: 'btn btn-success' %>
	    <%= link_to "Delete this topic", topic_path(topic), class: 'btn btn-danger', method: :delete %></p>
	<% end %>
	<br>
	<br>
	<%= link_to "Create a new topic", new_topic_path, class: 'btn btn-info' %>
</div>